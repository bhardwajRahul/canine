<%= content_for :title, t("scaffold.new.title", model: "Add On") %>

<div>
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-lg font-medium">
      <%= link_to "Add Ons", add_ons_path, class: "text-black dark:text-white" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= t("scaffold.new.title", model: "Add On") %>
    </h1>
  </div>

  <div class="card card-bordered bg-base-100">
    <div class="card-body">
      <%= form_with(model: @add_on, data: { controller: "add-ons--version-selector" }) do |form| %>
        <div class="space-y-8">
          <%= render(FormFieldComponent.new(
            label: "Name",
            description: "A unique name for your add on, only lowercase letters, numbers, and hyphens are allowed."
          )) do %>
            <%= form.text_field :name, class: "input input-bordered w-full focus:outline-offset-0", autofocus: true, required: true %>
            <label class="label">
              <span class="label-text-alt">* Required</span>
            </label>
          <% end %>

          <%= render(FormFieldComponent.new(
            label: "Cluster",
            description: "The cluster to deploy your add on to."
          )) do %>
            <%= form.collection_select :cluster_id, current_account.clusters.running, :id, :name, {}, { class: "select select-bordered w-full" } %>
            <label class="label">
              <span class="label-text-alt">* Required</span>
            </label>
          <% end %>

          <%= render "shared/partials/namespace_input_group", form: %>
        </div>

        <div data-controller="add-ons--chart-select">
          <h4>Select a chart</h4>
          <div class="text-sm text-gray-500">
            More charts coming soon.
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mt-4 mb-12">
            <% K8::Helm::Client::CHARTS['helm']['charts'].each do |chart| %>
            <div class="relative">
              <% if chart['coming_soon'] %>
                <div class="absolute badge badge-error top-[-10px] right-[-10px] z-10">
                  Coming Soon!
                </div>
              <% end %>
              <div class="card bg-base-100 shadow-xl <%= chart['coming_soon'] ? 'cursor-not-allowed' : 'cursor-pointer' %> overflow-hidden border hover:border-solid border-base-100 hover:border-base-300"
                  data-add-ons--chart-select-target="card"
                  data-chart-url="<%= chart['chart_url'] %>"
                  data-repository-url="<%= chart['repository_url'] %>"
                  data-artifact-hub-package-id="helm/<%= chart['chart_url'] %>"
                  <% unless chart['coming_soon'] %>
                    data-action="click->add-ons--chart-select#selectCard"
                  <% end %>
                  data-card-name="<%= chart['name'] %>">
                <figure class="px-4 pt-8 overflow-visible">
                  <div class="w-full flex items-center justify-center">
                    <img
                      src="<%= chart['logo'] %>" alt="<%= chart['name'] %>"
                      class="h-[50px] object-contain <%= chart['coming_soon'] ? 'opacity-50' : 'opacity-100' %>"
                    />
                  </div>
                </figure>
                <div class="card-body items-center text-center">
                  <%= chart['friendly_name'] || chart['name'].titleize %>
                </div>
              </div>
            </div>
            <% end %>

            <%= render "add_ons/helm/card" %>
          </div>

          <% K8::Helm::Client::CHARTS['helm']['charts'].each do |chart| %>
            <div class="mt-8 card-form hidden card-<%= chart['name'] %>">
              <h4 class="text-lg font-bold"><%= chart['name'].titleize %> Settings</h4>
              <hr class="mt-2 mb-6 border-base-content/10" />
              <% unless chart['coming_soon'] %>
                <%= render "add_ons/chart_form", chart: chart, form: form %>
              <% end %>
            </div>
          <% end %>

          <%= render "add_ons/helm/form", form: form %>

          <%= form.text_field :chart_url, class: "hidden", data: {
            'add-ons--chart-select-target': "chartUrl",
            'add-ons--version-selector-target': "chartUrl"
          } %>
          <%= form.text_field :repository_url, class: "hidden", data: {
            'add-ons--chart-select-target': "repositoryUrl",
            'add-ons--version-selector-target': "repositoryUrl"
          } %>
          <%= form.text_field :artifact_hub_package_id, class: "hidden", data: {
            'add-ons--chart-select-target': "artifactHubPackageId"
          } %>

          <div class="mt-8">
            <div class="collapse collapse-arrow border border-base-300 bg-base-100 rounded-box">
              <input type="checkbox" aria-label="Advanced Settings" class="w-full">
              <div class="collapse-title text-md font-medium">
                <div class="flex flex-col gap-1">
                  <span>Advanced Settings</span>
                  <span class="text-sm font-normal text-gray-500">Configure version and custom values.yaml</span>
                </div>
              </div>
              <div class="collapse-content">
                <!-- Version Selector -->
                <div data-add-ons--version-selector-target="versionSelector" class="hidden mb-6">
                  <div data-add-ons--version-selector-target="loading" class="hidden mb-4">
                    <div class="flex items-center gap-2 text-sm text-gray-500">
                      <span class="loading loading-spinner loading-sm"></span>
                      Fetching available versions...
                    </div>
                  </div>

                  <div data-add-ons--version-selector-target="error" class="hidden mb-4">
                    <div class="alert alert-error text-sm">
                      <span data-add-ons--version-selector-target="errorMessage"></span>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= form.label :version, "Version" %>
                    <%= form.select :version,
                        [],
                        {},
                        class: "select select-bordered w-full max-w-md",
                        data: { 'add-ons--version-selector-target': 'versionSelect' } %>
                    <label class="label">
                      <span class="label-text-alt">Select a version to install (defaults to latest)</span>
                    </label>
                  </div>
                </div>

                <!-- Values YAML -->
                <div
                  data-controller="yaml-autocomplete"
                  data-yaml-autocomplete-metadata-url-value="<%= metadata_add_ons_path %>"
                  data-yaml-autocomplete-chart-url-input-id-value="add_on_chart_url"
                >
                  <%= form.text_area :values_yaml,
                      class: "code textarea textarea-bordered w-full",
                      placeholder: "Paste your values.yaml here.",
                      rows: 10,
                      data: { 'yaml-autocomplete-target': 'textarea' } %>
                  <div class="relative">
                    <div class="absolute top-2 right-2 z-10">
                      <%= render "add_ons/show_default_yaml_button", chart_url_input_id: "add_on_chart_url" %>
                    </div>
                    <div data-yaml-autocomplete-target="editor"></div>
                    <div data-yaml-autocomplete-target="status" class="absolute bottom-2 right-2 text-xs"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="form-footer">
          <%= form.button "Create Add On", class: "btn btn-primary", data: {
            turbo_submits_with: "Creating...",
            'add-ons--version-selector-target': 'submitButton'
          } %>

          <% if form.object.new_record? %>
            <%= link_to t("cancel"), add_ons_path, class: "btn btn-secondary" %>
          <% else %>
            <%= link_to t("cancel"), add_on_path(@add_on), class: "btn btn-secondary" %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
